<Window x:Class="WindowStoreClone.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowStoreClone"
        xmlns:uc="clr-namespace:WindowStoreClone.UserControls"
        mc:Ignorable="d"
        Name="MainWindowMetro"
        Title="MainWindow" Height="900" Width="1300">
    <Grid>
        <Frame Name="MainFrameWindow"
               NavigationUIVisibility="Hidden"
               Loaded="MainFrameWindow_Loaded"
               Width="{Binding ElementName=MainWindowMetro, Path=ActualWidth}"
               Height="{Binding ElementName=MainWindowMetro, Path=ActualHeight}"/>
    </Grid>
</Window>
